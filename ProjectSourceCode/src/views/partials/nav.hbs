<nav
  style="background-color: #2c3e50; padding: 12px 20px; display: flex; align-items: center; justify-content: space-between;">
  <a href="/" style="color: #2ecc71; font-family: Arial, sans-serif; font-size: 1.4rem; text-decoration: none;">
    Tinderfy
  </a>

  <div style="display: flex; align-items: center; gap: 12px;">
    {{#if user}}
    <span style="color: #ecf0f1; font-family: Arial, sans-serif; font-size: 0.95rem; font-weight: bold;">
      {{user.username}}
    </span>
    <a href="/Account_info" style="text-decoration: none;">
      <button
        style="font-family: Arial, sans-serif; font-size: 0.95rem; background: transparent; color: #ecf0f1; border: 2px solid #2ecc71; border-radius: 8px; padding: 8px 16px; cursor: pointer;">
        Account
      </button>
    </a>
    <a href="/logout" style="text-decoration: none;">
      <button
        style="font-family: Arial, sans-serif; font-size: 0.95rem; background: #e74c3c; color: #ecf0f1; border: none; border-radius: 8px; padding: 8px 16px; cursor: pointer;">
        Logout
      </button>
    </a>
    {{else}}
    <a href="/register" style="text-decoration: none;">
      <button
        style="font-family: Arial, sans-serif; font-size: 0.95rem; background: transparent; color: #ecf0f1; border: 2px solid #2ecc71; border-radius: 8px; padding: 8px 16px; cursor: pointer;">
        Register
      </button>
    </a>
    <a href="/login" style="text-decoration: none;">
      <button
        style="font-family: Arial, sans-serif; font-size: 0.95rem; background: #2ecc71; color: #ecf0f1; border: none; border-radius: 8px; padding: 8px 16px; cursor: pointer;">
        Login
      </button>
    </a>
    {{/if}}
  </div>
</nav>