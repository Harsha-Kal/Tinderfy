<div class="home-wrapper">

  <div class="home-card register-card">
    <h2 class="home-title">Register</h2>

    {{> message}}

    <form method="POST" action="/register" class="form-group-stack">

      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" name="username" id="username" required class="input-field" />
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" id="password" required class="input-field" />
      </div>

      <button type="submit" class="btn btn-main btn-full">Register</button>

    </form>

    <div class="text-center mt-3">
      <p class="text-muted">Already have an account? <a href="/login" class="link-primary">Log in</a></p>
    </div>
  </div>

</div>